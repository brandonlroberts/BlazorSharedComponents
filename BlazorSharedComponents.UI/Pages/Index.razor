@page "/"

<AddValue OnAddValueClicked="HandleAddValue"/>
<ViewValue/>
<ViewValueTable ResetChangedValue="ResetChangedValue" ValueHasChanged="_valueHasChanged"/>

@code {
    private bool _valueHasChanged;

    private void HandleAddValue(bool valueChanged)
    {
        _valueHasChanged = valueChanged;
    }
    
    private void ResetChangedValue()
    {
        _valueHasChanged = false;
    }
}