@inject IDialogService DialogService
@namespace ComponentLibraryDemo

<MudButton @onclick="(() => OpenDialog(_maxWidth))" Variant="Variant.Filled" Color="Color.Primary">
    Add User
</MudButton>
@code {
    [Parameter] public EventCallback OnAddValueClicked { get; set; }
    DialogOptions _maxWidth = new()
    {
        MaxWidth = MaxWidth.Medium,
        FullWidth = true,
        CloseOnEscapeKey = true
    };
    private void OpenDialog(DialogOptions options)
    {
        var parameters = new DialogParameters { ["OnAddValueClicked"]= OnAddValueClicked };

        DialogService.Show<AddValueDialog>("Add Value", parameters, options);
    }
}
